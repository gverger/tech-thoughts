---
pageable: true
per_page: 10
layout: default
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="rounded overflow-hidden shadow-lg my-6 p-4 bg-white">
    <div class="px-6 flex justify-between">
      <div class="flex font-bold text-red-700 text-xl mb-2"><%= link_to article.title, article, class: "hover:text-red-500" %></div>
      <h5 class="flex text-red-300"><%= article.date.strftime('%B %d, %Y') %></h5>
    </div>
    <div class="px-6 text-gray-700 text-base">
      <%= article.summary(300) %>
    </div>
    <div class="px-6 py-4">
      <% article.tags.each do |tag| %>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
          <%= link_to "##{tag}", tag_path(tag) %>
        </span>
      <% end %>
    </div>
  </div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
